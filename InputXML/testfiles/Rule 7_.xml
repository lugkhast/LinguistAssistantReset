<ruleset name = "Tagalog Rules: Rule 1">
	<comments> Rule 1, HOKUS POKUS O: </comments>
	<rule name="NP-Agent => Pokus ng Aktor">
		<input>
			<component name="Cl">
				<component name="NP" matcher="$1">
					<features>
						<feature name="Semantic Role" value="Agent" />
					</features>
				</component>
			</component>
		</input>
		<output>
			<action name="addFeature" parentTag="$1" />
			<argument>
				<feature name="Complement Type" value="Actor" />
			</argument>
		</output>
	</rule>
	
	<rule name="NP-Patient => Pokus ng Tagatanggap">
		<input>
			<component name="Cl">
				<component name="NP" matcher="$1">
					<features>
						<feature name="Semantic Role" value="Patient" />
					</features>
				</component>
			</component>
		</input>
		<output>
			<action name="addFeature" parentTag="$1" />
			<argument>
				<feature name="Complement Type" value="Object" />
			</argument>
		</output>
	</rule>

	<rule name="NP-Destination/Beneficiary => Pokus na Direksyunal">
		<input>
			<component name="Cl">
				<component name="NP" matcher="$1">
					<features>
						<feature name="Semantic Role" value="Destination|Beneficiary" />
					</features>
				</component>
			</component>
		</input>
		<output>
			<action name="addFeature" parentTag="$1" />
			<argument>
				<feature name="Complement Type" value="Destination" />
			</argument>
		</output>
	</rule>

</ruleset>