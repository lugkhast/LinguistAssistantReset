<ruleset name = "Tagalog Rules: Rule 1">
	<comments> Rule 4, FOCUS ON AGREEMENTS :> </comments>
	<rule name="NP-Actor + VP = V-AF">
		<input>
			<component name="Cl">
				<component name="NP">
					<features>
						<feature name="Type" value="Focus" />
						<feature name="Complement Type" value="Actor" />
					</features>
				</component>
				<component name="VP">
					<component name="V" matcher="$1" />
				</component>
			</component>
		</input>
		<output>
			<action name="addFeature" parentTag="$1">
				<argument>
					<feature name="Focus" value="AF" />
				</argument>
			</action>
		</output>
	</rule>

